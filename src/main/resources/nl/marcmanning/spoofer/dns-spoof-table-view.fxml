<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import nl.marcmanning.spoofer.components.JsonTableView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nl.marcmanning.spoofer.controllers.DnsSpoofTableController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <JsonTableView fx:id="dnsSpoofTable" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="domainNameColumn" prefWidth="75.0" text="Domain Name" />
                <TableColumn fx:id="maliciousIpColumn" prefWidth="75.0" text="Malicious IP" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </JsonTableView>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <bottom>
        <VBox alignment="CENTER" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="domainNameField" promptText="Domain Name" />
                        <TextField fx:id="maliciousIpField" promptText="Malicious IP" />
                        <Button fx:id="dnsAddButton" mnemonicParsing="false" onAction="#onDnsSpoofEntryAdd" text="+" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <Label fx:id="dnsErrorLabel" textFill="#d72525">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </bottom>

</BorderPane>
