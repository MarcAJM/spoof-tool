<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import nl.marcmanning.spoofer.components.JsonTableView?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.marcmanning.spoofer.controllers.TargetsController">

    <center>
        <JsonTableView fx:id="targetLinksTable" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="ip1Column" editable="false" prefWidth="75.0" text="IP1" />
            <TableColumn fx:id="ip2Column" editable="false" prefWidth="75.0" text="IP2" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </JsonTableView>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
              <HBox alignment="CENTER" spacing="10.0">
                  <children>
                      <TextField fx:id="targetIp1Field" promptText="IP Address 1" />
                      <TextField fx:id="targetIp2Field" promptText="IP Address 2" />
                      <Button fx:id="targetAddButton" mnemonicParsing="false" onAction="#onTargetAdd" text="+" />
                  </children>
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
              </HBox>
            <Label fx:id="targetsErrorLabel" text="Label" textFill="RED" visible="false" />
         </children>
      </VBox>
   </bottom>

</BorderPane>
