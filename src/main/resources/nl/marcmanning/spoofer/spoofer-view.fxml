<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import nl.marcmanning.spoofer.components.LogView?>
<TabPane prefHeight="480.0" prefWidth="640.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.marcmanning.spoofer.controllers.MainController">
   <Tab text="Main">
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <LogView fx:id="logView" prefHeight="200.0" prefWidth="200.0"
                     BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets/>
               </BorderPane.margin>
            </LogView>
         </center>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <bottom>
            <Button fx:id="playButton" mnemonicParsing="false" text="Play" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="20.0"/>
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </Tab>
   <Tab text="Targets">
      <fx:include source="targets-view.fxml" fx:id="targetsView"/>
   </Tab>
   <Tab text="DNS Spoof Table">
      <fx:include source="dns-spoof-table-view.fxml" fx:id="dnsSpoofTableView"/>
   </Tab>
   <Tab text="Settings">
      <fx:include source="settings-view.fxml"/>
   </Tab>
</TabPane>
